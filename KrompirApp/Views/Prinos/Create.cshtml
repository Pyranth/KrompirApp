@model KrompirApp.PRINOS_PARCELE

@{
    ViewBag.Title = "Dodavanje";
}

<h2>Dodavanje</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PRINOS_PARCELE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.PARCELAID, "PARCELAID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PARCELAID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PARCELAID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PROIZVEDENAKOLICINA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PROIZVEDENAKOLICINA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PROIZVEDENAKOLICINA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index", "Parcela", new { id = Model.PARCELA.PROIZVODJACID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
