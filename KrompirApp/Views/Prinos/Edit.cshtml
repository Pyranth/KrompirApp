@model KrompirApp.PRINOS_PARCELE

@{
    ViewBag.Title = "Izmjena";
}

<h2>Izmjeni</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PRINOS_PARCELE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PRINOSID)

        <div class="form-group">
            @Html.LabelFor(model => model.PROIZVEDENAKOLICINA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PROIZVEDENAKOLICINA, new { htmlAttributes = new { @class = "form-control" } })
