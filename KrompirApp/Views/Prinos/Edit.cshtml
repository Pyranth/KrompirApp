                @Html.DropDownList("PARCELAID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PARCELAID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapamti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index", new { id = Model.PARCELAID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
